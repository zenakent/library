<% include ../partials/header %>

<div class="container">
<div class="row">
    <div class="col-md-6">
        <h1><%= user.username %>'s profile</h1>
        <h1><%= user.firstName + " " + user.lastName %></h1>
        
        <h4>About <%= user.username %></h4>
        <p><%= user.aboutme %></p>
        

   
    </div>
        
    <div class="col-md-6">
        <h3><%= user.username %>'s borrowed books</h3>
        <% reserve.forEach(function(reserve) { %>
        <ul>
            <li><a href="/library/<%= reserve.book.id %>"><%= reserve.book.name %></a></li>
        </ul>
        <% }); %>
    </div>
</div>
</div>

<% include ../partials/footer %>